<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head') %>

  <body>
    <%- include('../layout/navbar') %> <%- include('../partials/logout') %> <%-
    include('../layout/sidebar') %>

    <main id="main" class="main">
      <%- include('../layout/breadcrumb') %>

      <section class="section dashboard">
        <div class="row">
          <div class="col-12">
            <div class="card">
              <div class="card-body pt-3">
                <!-- General Form Elements -->
                <form id="message-form">
                  <div class="row mb-3">
                    <label
                      for="message-title-input"
                      class="col-sm-2 col-form-label"
                      >Title</label
                    >
                    <div class="col-sm-10">
                      <input
                        type="text"
                        class="form-control"
                        id="message-title-input"
                        autocomplete="off"
                      />
                    </div>
                  </div>

                  <label class="col-sm-2 col-form-label">Narration</label>
                  <!-- Quill Editor Default -->
                  <div
                    style="min-height: 150px"
                    id="message-editor"
                    class="mb-4"
                  ></div>
                  <!-- End Quill Editor Default -->

                  <div class="row mb-3">
                    <div class="col-sm-10">
                      <button
                        type="submit"
                        id="mgs-form-submit-btn"
                        class="btn btn-primary"
                      >
                        Send
                      </button>
                    </div>
                  </div>
                </form>
                <!-- End General Form Elements -->
              </div>
            </div>
          </div>
        </div>
      </section>
    </main>
    <!-- End #main -->

    <%- include('../layout/footer') %> <%- include('../partials/scripts') %>
  </body>
</html>
