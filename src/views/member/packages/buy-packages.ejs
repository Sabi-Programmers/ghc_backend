<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head') %>

  <body>
    <%- include('../layout/navbar') %> <%- include('../partials/logout') %> <%-
    include('../layout/sidebar') %>

    <main id="main" class="main">
      <%- include('../layout/breadcrumb') %>
      <section class="section dashboard">
        <div class="card">
          <div class="card-header">
            <h5 class="card-title p-0">Pick Your Packages</h5>
          </div>
          <div class="card-body">
            <form id="select-package-form">
              <div class="row row-gap-5 py-4 justify-content-center">
                <div class="col-6 col-md-4 col-lg-3">
                  <div class="card package-card">
                    <div class="overflow-hidden package-card-img-wrapper w-100">
                      <img
                        src="static/assets/img/bronze.png"
                        class="card-img-top w-100 h-100 package-card-img object-fit-cover"
                        alt="product"
                      />
                    </div>
                    <div class="card-body">
                      <h5 class="card-title text-truncate">Bronze</h5>

                      <h4 class="text-truncate">$ <%= data.prices.bronze %></h4>
                      <input
                        type="checkbox"
                        name="packages"
                        id="bronze"
                        value="bronze"
                        class="visually-hidden"
                        data-price="<%= data.prices.bronze %>"
                      />
                      <label for="bronze" class="btn w-100 m-0"> </label>
                    </div>
                  </div>
                </div>
                <div class="col-6 col-md-4 col-lg-3">
                  <div class="card package-card">
                    <div class="overflow-hidden package-card-img-wrapper w-100">
                      <img
                        src="static/assets/img/gold.png"
                        class="card-img-top w-100 h-100 package-card-img object-fit-cover"
                        alt="product"
                      />
                    </div>
                    <div class="card-body">
                      <h5 class="card-title text-truncate">Gold</h5>

                      <h4 class="text-truncate">$<%= data.prices.gold %></h4>
                      <input
                        type="checkbox"
                        name="packages"
                        id="gold"
                        value="gold"
                        class="visually-hidden"
                        data-price="<%= data.prices.gold %>"
                      />
                      <label for="gold" class="btn w-100 m-0"> </label>
                    </div>
                  </div>
                </div>
                <div class="col-6 col-md-4 col-lg-3">
                  <div class="card package-card">
                    <div class="overflow-hidden package-card-img-wrapper w-100">
                      <img
                        src="static/assets/img/diamond.png"
                        class="card-img-top w-100 h-100 package-card-img object-fit-cover"
                        alt="product"
                      />
                    </div>
                    <div class="card-body">
                      <h5 class="card-title text-truncate">Diamond</h5>

                      <h4 class="text-truncate">$<%= data.prices.diamond %></h4>
                      <input
                        type="checkbox"
                        name="packages"
                        id="diamond"
                        value="diamond"
                        class="visually-hidden"
                        data-price="<%= data.prices.diamond %>"
                      />
                      <label for="diamond" class="btn w-100 m-0"> </label>
                    </div>
                  </div>
                </div>
                <div class="col-12 text-end">
                  <button class="btn package-btn">Next</button>
                </div>
              </div>
            </form>
          </div>
        </div>
        <div class="row">
          <div class=""></div>
        </div>
      </section>
    </main>
    <!-- End #main -->
    <%- include('../layout/footer') %> <%- include('../partials/scripts') %>
  </body>
</html>
