<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head') %>

  <body>
    <%- include('../layout/navbar') %> <%- include('../partials/logout') %> <%-
    include('../layout/sidebar') %>

    <main id="main" class="main">
      <%- include('../layout/breadcrumb') %>
      <section class="section dashboard">
        <div class="row">
          <div class="col-md-8">
            <div class="card">
              <div class="card-header">
                <h5 class="card-title p-0">Complete Package Order</h5>
              </div>
              <div class="card-body package-order-wrapper p-0"></div>
            </div>
          </div>
          <div class="col-md-4">
            <div class="card bg-primary-subtle mb-3">
              <div class="card-body">
                <h5 class="card-title text-center">Summary</h5>
                <ul class="list-group list-group-flush bg-info">
                  <li
                    class="list-group-item bg-primary-subtle border-dark d-flex justify-content-between"
                  >
                    <span class="fw-semibold"> E-wallet Balance</span>
                    <span
                      class="fw-bold"
                      data-balance="<%= (data.ewallet.balance /
                    data.prices.usdRate) %>"
                      id="e-wallet-balance"
                      >$ <%= (data.ewallet.balance /
                      data.prices.usdRate).toFixed(2) %></span
                    >
                  </li>
                  <li
                    class="list-group-item bg-primary-subtle border-dark d-flex justify-content-between"
                  >
                    <span class="fw-semibold"> Total </span>
                    <span class="fw-bold" id="total"></span>
                  </li>
                  <li
                    class="list-group-item bg-primary-subtle border-dark d-flex align-items-center flex-column"
                  >
                    <button id="submit-package-order" class="btn btn-primary">
                      Submit Order
                    </button>

                    <span
                      id="package-order-error"
                      class="fst-italic small text-danger"
                    >
                    </span>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- <div
        class="modal show"
        id="pleaseWaitDialog"
        data-backdrop="static"
        data-keyboard="false"
      >
        <div class="modal-header">
          <h1>Processing...</h1>
        </div>
        <div class="modal-body">
          <div class="progress progress-striped active">
            <div class="bar" style="width: 100%"></div>
          </div>
        </div>
      </div> -->
      <div
        class="modal fade"
        id="pleaseWaitDialog"
        data-bs-backdrop="static"
        data-bs-keyboard="false"
        tabindex="-1"
        aria-hidden="true"
        style="background-color: #00000027"
      >
        <div class="modal-dialog modal-dialog-centered">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title">
                <span class="glyphicon glyphicon-time"> </span>Please Wait
              </h5>
            </div>
            <div class="modal-body py-5">
              <div class="progress">
                <div
                  class="progress-bar progress-bar-info progress-bar-striped active progress-bar-animated"
                ></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>
    <!-- End #main -->
    <%- include('../layout/footer') %> <%- include('../partials/scripts') %>
  </body>
</html>
