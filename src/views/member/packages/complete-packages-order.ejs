<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head') %>

  <body>
    <%- include('../layout/navbar') %> <%- include('../partials/logout') %> <%-
    include('../layout/sidebar') %>

    <main id="main" class="main">
      <%- include('../layout/breadcrumb') %>
      <section class="section dashboard">
        <div class="row">
          <div class="col-md-8">
            <div class="card">
              <div class="card-header">
                <h5 class="card-title p-0">Complete Package Order</h5>
              </div>
              <div class="card-body package-order-wrapper p-0"></div>
            </div>
          </div>
          <div class="col-md-4">
            <div class="card bg-primary-subtle mb-3">
              <div class="card-body">
                <h5 class="card-title text-center">Summary</h5>
                <ul class="list-group list-group-flush bg-info">
                  <li
                    class="list-group-item bg-primary-subtle border-dark d-flex justify-content-between"
                  >
                    <span class="fw-semibold"> E-wallet Balance</span>
                    <span
                      class="fw-bold"
                      data-balance="<%= (data.ewallet.balance /
                    data.prices.usdRate) %>"
                      id="e-wallet-balance"
                      >$ <%= (data.ewallet.balance /
                      data.prices.usdRate).toFixed(2) %></span
                    >
                  </li>
                  <li
                    class="list-group-item bg-primary-subtle border-dark d-flex justify-content-between"
                  >
                    <span class="fw-semibold"> Total </span>
                    <span class="fw-bold" id="total"></span>
                  </li>
                  <li
                    class="list-group-item bg-primary-subtle border-dark d-flex align-items-center flex-column border-bottom-0"
                  >
                    <button id="submit-package-order" class="btn btn-primary">
                      Submit Order
                    </button>

                    <span
                      id="package-order-error"
                      class="fst-italic small text-danger"
                    >
                    </span>
                  </li>
                  <li
                    class="list-group-item bg-primary-subtle border-dark d-flex justify-content-between"
                  >
                    <div class="text-center">
                      <div
                        class="form-check d-flex justify-content-center gap-1 gap-md-2"
                      >
                        <input
                          class="form-check-input"
                          name="terms"
                          type="checkbox"
                          id="accept-terms-and-conditions"
                        />
                        <p>
                          I agree and accept the
                          <a href="/legal" class="btn-link" target="_blank"
                            >terms and conditions</a
                          >
                        </p>
                      </div>
                    </div>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </section>
    </main>
    <!-- End #main -->
    <%- include('../layout/footer') %> <%- include('../partials/scripts') %>
  </body>
</html>
