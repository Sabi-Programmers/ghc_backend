<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head') %>

  <body>
    <%- include('../layout/navbar') %> <%- include('../partials/logout') %> <%-
    include('../layout/sidebar') %>

    <main id="main" class="main">
      <%- include('../layout/breadcrumb') %>

      <section class="section">
        <div class="row">
          <div class="col-lg-12">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title">Products Delivery</h5>

                <div class="table-responsive">
                  <!-- Table with stripped rows -->
                  <table
                    class="table table-striped table-bordered datatable text-truncate"
                  >
                    <thead class="table-dark">
                      <tr>
                        <th>Name</th>
                        <th>Product Cycle</th>
                        <th>Delivery Status</th>
                        <th>Delivery Note</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% for( let i = 0; i < data.orders.length; i++ ) { %>
                      <tr>
                        <td><%= data.user.fullName %></td>
                        <td>
                          <%= data.orders[i].package.charAt(0) %><%=
                          data.orders[i].cycle %>
                        </td>
                        <td><%= data.orders[i].status %></td>
                        <td><%= data.orders[i].deliveryNote %></td>
                      </tr>
                      <% } %>
                    </tbody>
                  </table>
                  <!-- End Table with stripped rows -->
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    </main>
    <!-- End #main -->
    <%- include('../layout/footer') %> <%- include('../partials/scripts') %>
  </body>
</html>
