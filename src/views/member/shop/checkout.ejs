<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head') %>

  <body>
    <%- include('../layout/navbar') %> <%- include('../partials/logout') %> <%-
    include('../layout/sidebar') %>

    <main id="main" class="main">
      <%- include('../layout/breadcrumb') %>

      <section class="section dashboard">
        <div class="row g-5">
          <div class="offset-lg-2 col-lg-8">
            <h4 class="mb-3">Billing address</h4>
            <form class="needs-validation" id="checkout-form" novalidate>
              <div class="row g-3">
                <div class="col-12 form-group">
                  <label for="firstName" class="form-label">First name</label>
                  <input
                    type="text"
                    class="form-control"
                    name="fullName"
                    placeholder=""
                    value=""
                    required
                  />
                </div>

                <div class="col-12 form-group">
                  <label for="email" class="form-label">Email </label>
                  <input
                    type="email"
                    class="form-control"
                    name="email"
                    placeholder="you@example.com"
                    required
                  />
                </div>

                <div class="col-12 form-group">
                  <label for="address" class="form-label">Phone Number</label>
                  <input
                    type="text"
                    class="form-control"
                    name="phone"
                    placeholder="+234 9012345678"
                    required
                  />
                </div>
                <div class="col-12 form-group">
                  <label for="address" class="form-label">Address</label>
                  <input
                    type="text"
                    class="form-control"
                    name="address"
                    placeholder="1234 Main St"
                    required
                  />
                </div>

                <div class="col-md-5 form-group">
                  <label for="country" class="form-label">Country</label>
                  <input
                    type="text"
                    class="form-control"
                    name="country"
                    placeholder="Nigeria"
                    required
                  />
                </div>

                <div class="col-md-4 form-group">
                  <label for="state" class="form-label">State</label>
                  <input
                    type="text"
                    class="form-control"
                    name="state"
                    placeholder="Abuja"
                    required
                  />
                </div>

                <div class="col-md-3 form-group">
                  <label for="zip" class="form-label">Zip</label>
                  <input
                    type="text"
                    class="form-control"
                    id="zip"
                    placeholder=""
                  />
                </div>
              </div>

              <hr class="mt-3" />
              <div class="d-flex justify-content-between">
                <h5>Order Total:</h5>
                <h5 id="checkout-order-total">$000</h5>
              </div>

              <button class="w-100 btn btn-primary mt-5 btn-lg" type="submit">
                Continue to checkout
              </button>
            </form>
          </div>
        </div>
      </section>
    </main>
    <!-- End #main -->
    <%- include('../layout/footer') %> <%- include('../partials/scripts') %>
  </body>
</html>
