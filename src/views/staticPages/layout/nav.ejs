<!-- ======= Header ======= -->
<header id="header" class="fixed-top shadow">
  <div class="border-bottom pb-2">
    <div class="container d-flex flex-column gap-1" style="color: #fd7e14">
      <div class="d-flex align-items-center gap-2">
        <i class="bx bx-map"></i>
        <span class="text-dark">
          PL 330, FI-00831 Helsinki, SUOMI/FINLAND.
        </span>
      </div>
      <div class="d-flex align-items-center gap-2">
        <i class="bx bx-phone"></i>
        <span class="text-dark"> +358 21 533 1470. </span>
      </div>
    </div>
  </div>
  <div class="container d-flex align-items-center justify-content-between pt-2">
    <a href="/" class="logo gap-3"
      ><img
        src="/static/assets/img/logo_01.png"
        alt="GHC LOGO"
        class="img-fluid image"
      /><span>GHC</span></a
    >

    <nav id="navbar" class="navbar">
      <ul>
        <li>
          <a class="nav-link <%= data.path == '/' ? 'active' : '' %>" href="/"
            >Home</a
          >
        </li>
        <li>
          <a
            class="nav-link <%= data.path == '/about' ? 'active' : '' %>"
            href="/about"
            >About us</a
          >
        </li>
        <li>
          <a
            class="nav-link <%= data.path == '/how-it-works' ? 'active' : '' %>"
            href="/how-it-works"
            >How it works</a
          >
        </li>
        <li>
          <a class="nav-link" href="/our-products">Our Products</a>
        </li>
        <li>
          <a
            class="nav-link <%= data.path.includes('shop') ? 'active' : '' %>"
            href="/shop"
            >Shop now
          </a>
        </li>
        <li>
          <a
            class="nav-link <%= data.path == '/testimonials' ? 'active' : '' %>"
            href="/testimonials"
            >Testimony</a
          >
        </li>
        <li>
          <a
            class="nav-link <%= data.path == '/faq' ? 'active' : '' %>"
            href="/faq"
            >FAQ</a
          >
        </li>

        <li>
          <a
            class="nav-link <%= data.path == '/contact' ? 'active' : '' %>"
            href="/contact"
            >Contact</a
          >
        </li>
        <li>
          <% if (data.isAuthenticated) { %>
          <a class="getstarted m-0" href="/dashboard">Dashboard</a>
          <% } else { %>
          <a class="getstarted m-0" href="/auth/login">Login</a>
          <% } %>
        </li>

        <a
          href="/shop/cart"
          class="nav-link position-relative p-2 un-cart d-none"
        >
          <i class="bx bx-cart-alt" style="font-size: 24px"></i>
          <span
            class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger cart-item-count"
          >
          </span>
        </a>
      </ul>

      <a
        href="/shop/cart"
        class="nav-link position-relative p-2 un-cart-mob d-none d-lg-none me-4"
      >
        <i class="bx bx-cart-alt" style="font-size: 24px"></i>
        <span
          class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger cart-item-count"
        >
        </span>
      </a>
      <i class="bi bi-list mobile-nav-toggle"></i>
    </nav>
    <!-- .navbar -->
  </div>
</header>
<!-- End Header -->
