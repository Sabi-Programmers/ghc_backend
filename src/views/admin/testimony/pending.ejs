<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head') %>

  <body>
    <%- include('../layout/navbar') %> <%- include('../partials/logout') %> <%-
    include('../layout/sidebar') %>

    <main id="main" class="main">
      <%- include('../layout/breadcrumb') %>

      <section class="section dashboard">
        <div class="row" style="color: #012970">
          <div class="col-12">
            <div class="card">
              <div class="card-body pt-4">
                <form action="" method="GET">
                  <div class="input-group mb-3">
                    <input
                      type="text"
                      name="q"
                      class="form-control"
                      placeholder="Search username, or fullname"
                      aria-label="Search"
                      value="<%= data.q %>"
                    />
                    <button class="btn btn-outline-secondary" type="submit">
                      <i class="bx bx-search-alt-2"></i>
                    </button>
                  </div>
                </form>
                <div class="table-responsive">
                  <table
                    class="table orders-table table-striped table-hover table-bordered text-truncate"
                    style="width: 100%"
                  >
                    <thead class="table-dark">
                      <tr>
                        <th>Member name</th>
                        <th>Username</th>
                        <th>Current cycle</th>
                        <th>Request Date</th>
                        <th>Testimony type</th>
                        <th>View Testimony</th>
                        <th>View Account</th>
                        <th>Message member</th>
                        <th>Reject Testimony</th>
                        <th>Credit Bonus</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% for( let i = 0; i < data.testimonies.length; i++ ) { %>

                      <tr>
                        <td class="text-capitalize">
                          <%= data.testimonies[i].user.fullName %>
                        </td>
                        <td><%= data.testimonies[i].user.username%></td>
                        <td>
                          <%= "B" + data.testimonies[i].user.bronze.currentCycle
                          + ", G" + data.testimonies[i].user.gold.currentCycle +
                          ", D" + data.testimonies[i].user.diamond.currentCycle
                          %>
                        </td>
                        <td>
                          <%=
                          (data.testimonies[i].createdAt).toLocaleDateString()%>
                        </td>
                        <td class="text-capitalize">
                          <%= (data.testimonies[i].package).toLowerCase()%>
                          Withdrawal
                        </td>
                        <td>
                          <button
                            type="button"
                            class="btn btn-primary btn-sm"
                            data-bs-toggle="modal"
                            data-bs-target="#viewTestimonyModal-<%= data.testimonies[i].id %>"
                          >
                            View
                          </button>
                          <div
                            class="modal fade"
                            id="viewTestimonyModal-<%= data.testimonies[i].id %>"
                            tabindex="-1"
                            data-bs-backdrop="static"
                            data-bs-keyboard="false"
                            role="dialog"
                            aria-labelledby="modalTitleId-<%= data.testimonies[i].id %>"
                            aria-hidden="true"
                          >
                            <div class="modal-dialog modal-dialog-centered">
                              <div class="modal-content">
                                <div class="modal-header">
                                  <h5
                                    class="modal-title"
                                    id="modalTitleId-<%= data.testimonies[i].id %>"
                                  >
                                    View Testimony
                                  </h5>
                                  <button
                                    type="button"
                                    class="btn-close"
                                    data-bs-dismiss="modal"
                                    aria-label="Close"
                                  ></button>
                                </div>
                                <div class="modal-body text-full">
                                  <div>
                                    <strong>Facebook Link:</strong>
                                    <p>
                                      <%= data.testimonies[i].facebookLink %>
                                    </p>
                                  </div>
                                  <div>
                                    <strong>Youtube Link:</strong>
                                    <p>
                                      <%= data.testimonies[i].youtubeLink %>
                                    </p>
                                  </div>
                                  <div>
                                    <strong>Tiktok Link:</strong>
                                    <p><%= data.testimonies[i].tiktokLink %></p>
                                  </div>
                                  <div>
                                    <strong>Message:</strong>
                                    <p><%= data.testimonies[i].message %></p>
                                  </div>
                                </div>
                                <div class="modal-footer">
                                  <button
                                    type="button"
                                    class="btn btn-secondary"
                                    data-bs-dismiss="modal"
                                  >
                                    Close
                                  </button>
                                </div>
                              </div>
                            </div>
                          </div>
                        </td>
                        <td>
                          <button class="btn btn-sm btn-info">View</button>
                        </td>
                        <td>
                          <a
                            href="/admin/messages/send?member=<%= data.testimonies[i].user.username %>"
                            class="btn btn-sm btn-secondary"
                          >
                            Message
                          </a>
                        </td>
                        <td>
                          <button
                            type="button"
                            class="btn btn-danger btn-sm"
                            data-bs-toggle="modal"
                            data-bs-target="#rejectTestimonyModal-<%= data.testimonies[i].id %>"
                          >
                            Reject
                          </button>
                          <div
                            class="modal fade"
                            id="rejectTestimonyModal-<%= data.testimonies[i].id %>"
                            tabindex="-1"
                            data-bs-backdrop="static"
                            data-bs-keyboard="false"
                            role="dialog"
                            aria-labelledby="rejectTestimonyTitleId-<%= data.testimonies[i].id %>"
                            aria-hidden="true"
                          >
                            <div class="modal-dialog modal-dialog-centered">
                              <div class="modal-content">
                                <div class="modal-header">
                                  <h5
                                    class="modal-title"
                                    id="rejectTestimonyTitleId-<%= data.testimonies[i].id %>"
                                  >
                                    Reject Testimony
                                  </h5>
                                  <button
                                    type="button"
                                    class="btn-close"
                                    data-bs-dismiss="modal"
                                    aria-label="Close"
                                  ></button>
                                </div>
                                <div class="modal-body text-full">
                                  <input
                                    class="form-control mb-3"
                                    type="text"
                                    readonly
                                    value="<%= data.testimonies[i].user.fullName %>"
                                  />
                                  <form class="rejectTestimonyForm">
                                    <input
                                      type="text"
                                      value="<%= data.testimonies[i].user.id %>"
                                      name="userId"
                                      class="d-none"
                                    />
                                    <input
                                      type="text"
                                      value="<%= data.testimonies[i].id %>"
                                      name="id"
                                      class="d-none"
                                    />
                                    <div class="mb-3">
                                      <label
                                        for="feedbackMessage"
                                        class="form-label"
                                        >Feedback Message</label
                                      >
                                      <textarea
                                        class="form-control"
                                        id="feedbackMessage"
                                        name="feedbackMessage"
                                        rows="3"
                                      ></textarea>
                                    </div>
                                    <div class="modal-footer">
                                      <button
                                        type="button"
                                        class="btn btn-sm btn-secondary"
                                        data-bs-dismiss="modal"
                                      >
                                        Cancel
                                      </button>
                                      <button
                                        type="submit"
                                        class="btn btn-sm btn-danger"
                                      >
                                        Reject
                                      </button>
                                    </div>
                                  </form>
                                </div>
                              </div>
                            </div>
                          </div>
                        </td>
                        <td>
                          <button
                            type="button"
                            class="btn btn-success btn-sm"
                            data-bs-toggle="modal"
                            data-bs-target="#creditTestimonyModal-<%= data.testimonies[i].id %>"
                          >
                            Credit
                          </button>
                          <div
                            class="modal fade"
                            id="creditTestimonyModal-<%= data.testimonies[i].id %>"
                            tabindex="-1"
                            data-bs-backdrop="static"
                            data-bs-keyboard="false"
                            role="dialog"
                            aria-labelledby="creditTestimonyTitleId-<%= data.testimonies[i].id %>"
                            aria-hidden="true"
                          >
                            <div class="modal-dialog modal-dialog-centered">
                              <div class="modal-content">
                                <div class="modal-header">
                                  <h5
                                    class="modal-title"
                                    id="creditTestimonyTitleId-<%= data.testimonies[i].id %>"
                                  >
                                    Credit Testimony Bonus
                                  </h5>
                                  <button
                                    type="button"
                                    class="btn-close"
                                    data-bs-dismiss="modal"
                                    aria-label="Close"
                                  ></button>
                                </div>
                                <div class="modal-body text-full">
                                  <label> Name </label>
                                  <input
                                    class="form-control mb-3"
                                    type="text"
                                    readonly
                                    value="<%= data.testimonies[i].user.fullName %>"
                                  />

                                  <label class="mt-3">Package</label>
                                  <input
                                    class="form-control mb-3"
                                    type="text"
                                    readonly
                                    value="<%= data.testimonies[i].package %>"
                                  />

                                  <label class="mt-3"
                                    >Last Testimony Bonus Credit Count</label
                                  >
                                  <input
                                    class="form-control mb-3"
                                    type="text"
                                    readonly
                                    value="<%= data.testimonies[i].lastPaidCycles %>"
                                  />
                                  <label class="mt-3"
                                    >Testimony Bonus Record</label
                                  >
                                  <a
                                    href="/admin/testimony/<%= data.testimonies[i].user.id %>"
                                    class="btn btn-info btn-sm text-white d-block mt-1 w-auto"
                                  >
                                    View
                                  </a>
                                  <form class="creditTestimonyForm mt-3">
                                    <input
                                      type="text"
                                      value="<%= data.testimonies[i].user.id %>"
                                      name="userId"
                                      class="d-none"
                                    />
                                    <input
                                      type="text"
                                      value="<%= data.testimonies[i].id %>"
                                      name="id"
                                      class="d-none"
                                    />
                                    <div class="mb-3">
                                      <div class="form-check">
                                        <input
                                          class="form-check-input"
                                          type="checkbox"
                                          value=""
                                          id="flexCheckDefault"
                                        />
                                        <label
                                          class="form-check-label"
                                          for="flexCheckDefault"
                                        >
                                          Published to web pages
                                        </label>
                                      </div>
                                    </div>
                                    <div class="modal-footer">
                                      <button
                                        type="button"
                                        class="btn btn-sm btn-secondary"
                                        data-bs-dismiss="modal"
                                      >
                                        Cancel
                                      </button>
                                      <button
                                        type="submit"
                                        class="btn btn-sm btn-success"
                                      >
                                        Credit
                                      </button>
                                    </div>
                                  </form>
                                </div>
                              </div>
                            </div>
                          </div>
                        </td>
                      </tr>
                      <% } %>
                    </tbody>
                  </table>
                </div>
              </div>
              <%- include('../partials/pagination', {urlPrefix: data.q ?
              `?q=${data.q}` : `?k=p`, data}) %>
            </div>
          </div>
        </div>
      </section>
    </main>
    <!-- End #main -->

    <%- include('../layout/footer') %> <%- include('../partials/scripts') %>
  </body>
</html>
