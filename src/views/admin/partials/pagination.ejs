<div class="card-footer">
  <ul class="pagination justify-content-center custom-pagination">
    <!-- Previous Button -->
    <li
      class="page-item <%= data.pagination.currentPage === 1 ? 'disabled' : '' %>"
    >
      <a
        class="page-link"
        href="<%=urlPrefix %>&page=<%= data.pagination.currentPage > 1 ? data.pagination.currentPage - 1 : 1 %>"
        aria-label="Previous"
      >
        <span aria-hidden="true">&laquo;</span>
      </a>
    </li>

    <!-- First Page -->
    <li
      class="page-item <%= data.pagination.currentPage === 1 ? 'active' : '' %>"
    >
      <a class="page-link" href="<%=urlPrefix %>&page=1">1</a>
    </li>

    <!-- Pages around Current Page -->
    <% let startPage = Math.max(2, data.pagination.currentPage - 1); %> <% let
    endPage = Math.min(data.pagination.totalPages - 1,
    data.pagination.currentPage + 1); %> <% for (let i = startPage; i <=
    endPage; i++) { %>
    <li
      class="page-item <%= i === data.pagination.currentPage ? 'active' : '' %>"
    >
      <a class="page-link" href="<%=urlPrefix %>&page=<%= i %>"><%= i %></a>
    </li>
    <% } %>

    <!-- Ellipsis before Last Page -->
    <% if (data.pagination.currentPage < data.pagination.totalPages - 2) { %>
    <li class="page-item disabled"><a class="page-link">...</a></li>
    <% } %>

    <!-- Last Page -->
    <% if (data.pagination.totalPages > 1) { %>
    <li
      class="page-item <%= data.pagination.currentPage === data.pagination.totalPages ? 'active' : '' %>"
    >
      <a
        class="page-link"
        href="<%=urlPrefix %>&page=<%= data.pagination.totalPages %>"
        ><%= data.pagination.totalPages %></a
      >
    </li>
    <% } %>

    <!-- Next Button -->
    <li
      class="page-item <%= data.pagination.currentPage === data.pagination.totalPages ? 'disabled' : '' %>"
    >
      <a
        class="page-link"
        href="<%=urlPrefix %>&page=<%= data.pagination.currentPage < data.pagination.totalPages ? data.pagination.currentPage + 1 : data.pagination.totalPages %>"
        aria-label="Next"
      >
        <span aria-hidden="true">&raquo;</span>
      </a>
    </li>
  </ul>
</div>
