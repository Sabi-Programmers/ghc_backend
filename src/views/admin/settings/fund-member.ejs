<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head') %>

  <body>
    <%- include('../layout/navbar') %> <%- include('../partials/logout') %> <%-
    include('../layout/sidebar') %>

    <main id="main" class="main">
      <%- include('../layout/breadcrumb') %>

      <section class="section dashboard">
        <div class="row" style="color: #012970">
          <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
            <div class="card">
              <div class="card-body">
                <% if (data.member) { %>
                <a href="?" class="btn btn-sm btn-secondary mt-3"> Back </a>

                <div class="form-group">
                  <div class="mb-3">
                    <label for="inputText" class="col-form-label fw-bold"
                      >Confirm Name</label
                    >
                    <div>
                      <h6 class="form-control text-capitalize">
                        <%= data.member.fullName %>
                      </h6>
                    </div>
                  </div>
                </div>

                

                <div class="mb-3">
                  <label class="col-form-label pt-0 fw-bold">
                    E-Wallet Balance
                  </label>
                  <div class="form-control">
                    $<%= data.wallet %>
                  </div>
                </div>
                <form id="fund-member-form">
                  <div class="mb-3 mt-3">
                    <label for="inputText" class="col-form-label fw-bold"
                      >username</label
                    >
                    <input
                    type="text"
                    name="username"
                    value="<%= data.member.username %>"
                    class="form-control"
                    readonly
                    />
                    
                    <label for="inputText" class="col-form-label fw-bold"
                      >Enter Amount</label
                    >
                    <div class="position-relative">
                      <input
                        type="number"
                        name="amount"
                        id="fund-member-amount"
                        class="form-control"
                      />
                    </div>
                  </div>
                  <div class="mt-4 text-center">
                    <button class="btn btn-primary">Fund Member </button>
                  </div>
                </form>
                <% } else { %>
                <div id="search-member-container" class="mb-3 mt-3">
                  <div class="input-group mb-3">
                    <input
                      type="search"
                      id="search-member-input"
                      class="form-control"
                      placeholder="Search member's username"
                      aria-label="Search member's username"
                    />
                  </div>
                  <ul id="search-member-results"></ul>
                </div>
                <% } %>
              </div>
            </div>
          </div>
        </div>
      </section>
    </main>
    <!-- End #main -->

    <%- include('../layout/footer') %> <%- include('../partials/scripts') %>
  </body>
</html>
