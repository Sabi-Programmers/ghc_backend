<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head') %>

  <body>
    <%- include('../layout/navbar') %> <%- include('../partials/logout') %> <%-
    include('../layout/sidebar') %>

    <main id="main" class="main">
      <%- include('../layout/breadcrumb') %>
      <section class="section dashboard">
        <div class="row">
          <div class="col-12">
            <div class="card">
              <div class="card-body pt-3">
                <% if (data.member) { %>
                <a href="?" class="btn btn-sm btn-secondary">Back</a>
                <form id="admin-message-form">
                  <div class="row mb-3">
                    <label
                      for="message-name-input"
                      class="col-sm-2 col-form-label"
                      >Confirm Name</label
                    >
                    <div class="col-sm-10">
                      <input
                        type="text"
                        class="form-control"
                        id="message-name-input"
                        autocomplete="off"
                        value="<%= data.member.fullName %>"
                        readonly
                      />
                    </div>
                  </div>
                  <input
                    type="text"
                    value="<%= data.member.id %>"
                    class="d-none"
                    id="message-user-id-input"
                  />
                  <div class="row mb-3">
                    <label
                      for="message-username-input"
                      class="col-sm-2 col-form-label"
                      >Username</label
                    >
                    <div class="col-sm-10">
                      <input
                        type="text"
                        class="form-control"
                        id="message-username-input"
                        autocomplete="off"
                        readonly
                        value="<%= data.member.username %>"
                      />
                    </div>
                  </div>
                  <div class="row mb-3">
                    <label
                      for="message-title-input"
                      class="col-sm-2 col-form-label"
                      >Title</label
                    >
                    <div class="col-sm-10">
                      <input
                        type="text"
                        class="form-control"
                        id="message-title-input"
                        autocomplete="off"
                      />
                    </div>
                  </div>

                  <label class="col-sm-2 col-form-label">Narration</label>
                  <!-- Quill Editor Default -->
                  <div
                    style="min-height: 150px"
                    id="admin-message-editor"
                    class="mb-4"
                  ></div>
                  <!-- End Quill Editor Default -->

                  <div class="row mb-3">
                    <div class="col-sm-10">
                      <button
                        type="submit"
                        id="mgs-form-submit-btn"
                        class="btn btn-primary"
                      >
                        Send
                      </button>
                    </div>
                  </div>
                </form>
                <% } else { %>
                <div id="search-member-container" class="mb-3 mt-3">
                  <div class="input-group mb-3">
                    <input
                      type="search"
                      id="search-member-input"
                      class="form-control"
                      placeholder="Search member's username"
                      aria-label="Search member's username"
                    />
                  </div>
                  <ul id="search-member-results"></ul>
                </div>
                <% } %>
              </div>
            </div>
          </div>
        </div>
      </section>
    </main>
    <!-- End #main -->

    <%- include('../layout/footer') %> <%- include('../partials/scripts') %>
  </body>
</html>
