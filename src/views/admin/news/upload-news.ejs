<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head') %>

  <body>
    <%- include('../layout/navbar') %> <%- include('../partials/logout') %> <%-
    include('../layout/sidebar') %>

    <main id="main" class="main">
      <%- include('../layout/breadcrumb') %>

      <section class="section dashboard">
        <div class="row">
          <div class="col">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title">Upload News</h5>

                <!-- General Form Elements -->
                <form id="news-form">
                  <div class="row mb-3">
                    <label for="inputNumber" class="col-sm-2 col-form-label"
                      >Upload Picture File</label
                    >
                    <div class="col-sm-10">
                      <input class="form-control" type="file" id="formFile" />
                    </div>
                  </div>

                  <div class="row mb-3">
                    <label for="inputText" class="col-sm-2 col-form-label"
                      >Title</label
                    >
                    <div class="col-sm-10">
                      <input type="text" class="form-control" />
                    </div>
                  </div>

                  <label class="col-sm-2 col-form-label">Narration</label>
                  <!-- Quill Editor Default -->
                  <div
                    style="min-height: 150px"
                    id="news-editor"
                    class="mb-4"
                  ></div>
                  <!-- End Quill Editor Default -->

                  <div class="row mb-3">
                    <div class="col-sm-10">
                      <button type="submit" class="btn btn-primary">
                        Broadcast
                      </button>
                    </div>
                  </div>
                </form>
                <!-- End General Form Elements -->
              </div>
            </div>
          </div>
        </div>
      </section>
    </main>
    <!-- End #main -->

    <%- include('../layout/footer') %> <%- include('../partials/scripts') %>
  </body>
</html>
