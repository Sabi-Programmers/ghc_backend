<% if (data && data.error) { %>

<div
  class="alert alert-warning alert-dismissible fade show w-100 position-relative"
  role="alert"
>
  <%= data.error %>

  <button
    type="button"
    class="close btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %> <% if ( locals.messages && Object.keys(messages).length !== 0 ) { %>
<ul
  class="alert alert-warning alert-dismissible fade show w-100 position-relative"
  role="alert"
>
  <% Object.keys(messages).forEach((key) => { %> <%
  messages[key].forEach((message) => { %>
  <li class="<%= key %>"><%= message %></li>
  <% }) %> <% }) %>

  <button
    type="button"
    class="close btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</ul>

<% } %>

